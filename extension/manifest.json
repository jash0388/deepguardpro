{
  "manifest_version": 3,
  "name": "DeepGuard Pro",
  "version": "1.0",
  "description": "Detect deepfake images with one right-click using AI",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "DeepGuard Pro"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}